@using WebShop.Classes;

@{
    Layout = "~/Pages/Master.cshtml";

    var products = new DataBase().GetDummyProducts(20);

    var logger = new Logger();

    logger.WriteLogMessage("User listing products");
}
<div class="container" style="margin-top: 100px">

    <!-- Three columns of text below the carousel -->
    <div class="row">
        @foreach (var product in products)
        {
        <div class="col-lg-4" style="text-align: center">
            <img class="img-circle" src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="Generic placeholder image" width="140" height="140">
            <h2>@product.Title</h2>
            <p>@product.Description</p>
            <form method="post">
                <input type="hidden" value="@product.Artnr" name="artnr" />
                <input class="btn btn-default" type="submit" value="Add to cart" name="addtocart" />
            </form>
        </div><!-- /.col-lg-4 -->
        }
    </div><!-- /.row -->

</div><!-- /.container -->
